<Window x:Class="TransparentClock.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClockOverlay" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False"
        Width="Auto" Height="Auto" SizeToContent="WidthAndHeight"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
		PreviewMouseWheel="Window_PreviewMouseWheel">

	<Border Background="#55000000" CornerRadius="8" Padding="8"
            BorderThickness="1" BorderBrush="#44FFFFFF">
		<TextBlock x:Name="TimeText" Foreground="White"
                  FontSize="20" FontWeight="SemiBold"
                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
	</Border>
</Window>